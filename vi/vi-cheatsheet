# move line down
ddp

# move line up
ddkP

# delete one word forward
dw

# copy line down
yyp 

# move cursor to line `n`
nG

# Move forward to first `X` character on the line
fX

# Move backwards to first `X` character on the line
FX

# move back to the beginning of current word
b

# (in show mode)

# replace every `pick` with `squash` in lines 2-3
:2,3s/pick/squash/g

# replace every `pick` with `reword` from the beginning of the file to current line
:1,.s/pick/reword/g

# delete all empty lines in a working buffer
:g/^$/d